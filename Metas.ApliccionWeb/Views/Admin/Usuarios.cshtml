@using Metas.AplicacionWeb.Models.ViewModels
@model List<VMUsuario>
@{
    ViewData["Title"] = "Creación de Usuarios";
}

<div class="mt-4 shadow border p-4 rounded-4 text-center">
    <button class="boton-amarillo fw-light fs-6" data-bs-toggle="modal" data-bs-target="#ModalUsuario">Crear usuario</button>

    <table class="table">
        <thead>
            <tr>
                <th class="fw-semibold" style="color:#741732">Id Usuario</th>
                <th class="fw-semibold" style="color:#741732">Usuario</th>
                <th class="fw-semibold" style="color:#741732">Contraseña</th>
                <th class="fw-semibold" style="color:#741732">Area</th>
                <th class="fw-semibold" style="color:#741732">Rol</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tablaUsuarios">
            @foreach (var usuario in Model)
            {
                <tr>
                    <td class="fw-light align-middle">@usuario.IdUsuario</td>
                    <td class="fw-light align-middle border-start">@usuario.Usuario1</td>
                    <td class="fw-light align-middle border-start">@usuario.Pass</td>
                    <td class="fw-light align-middle border-start text-start">@usuario.Area</td>
                    <td class="fw-light align-middle border-start">@usuario.Definicion</td>
                    <td class="border-start align-middle">
                        <button class="boton-rojo fw-light fs-6 ms-3 me-2" onclick="eliminarUsuario(@usuario.IdUsuario, '@usuario.Usuario1')">
                            Eliminar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="modal fade" id="ModalUsuario" tabindex="-1" aria-labelledby="miModalLabel"
         data-bs-backdrop="false" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content glass-effect" style="box-shadow: 0 0 40px 2px #c09866 !important">
                <div class="modal-header">
                    <h5 class="modal-title titulo fw-semibold" style="margin-left: 140px" id="miModalLabel">Creación de usuario</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="formCrearUsuario">
                    <div class="modal-body">
                        <label class="form-label titulo fw-semibold">Nombre</label>
                        <input type="text" class="form-control mb-3 input-arena fw-light" style="color:#c09866" id="txtUsuario" name="Usuario1" required />

                        <label class="form-label titulo fw-semibold">Contraseña</label>
                        <input type="text" class="form-control mb-3 input-arena fw-light" style="color:#c09866" id="txtPassword" name="Pass" required />

                        <label class="form-label titulo fw-semibold">Tipo</label>
                        <select class="form-control mb-3 input-arena fw-light" style="color:#c09866" id="selectTipo" name="Definicion" required>
                            <option value="">Seleccione Tipo de Usuario</option>
                            <option value="Dirección">Dirección</option>
                            <option value="Unidad">Unidad</option>
                            <option value="Departamento">Departamento</option>
                        </select>

                        <label class="form-label titulo fw-semibold">Area</label>
                        <select class="form-control mb-3 input-arena fw-light" style="color:#c09866" id="selectArea" name="Area" required>
                            <option value="">Seleccione Area</option>
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="boton-rojo fs-6 fw-light" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="boton-amarillo fs-6 fw-light" id="btnGuardar">Crear Usuario</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Cargar áreas según el tipo
            $("#selectTipo").change(function () {
                $("#selectArea").empty();
                $("#selectArea").append('<option value="">Seleccione Area</option>');

                var selected = $(this).val();

                if (selected != "") {
                    $.ajax({
                        type: 'POST',
                        url: '/Admin/GetTipo',
                        data: { id: selected },
                        dataType: 'json',
                        success: function (states) {
                            $.each(states, function (i, state) {
                                $("#selectArea").append('<option value="' + state.value + '">' +
                                    state.text + '</option>');
                            });
                        },
                        error: function (xhr) {
                            console.error('Error:', xhr);
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'Error al cargar las áreas'
                            });
                        }
                    });
                }
            });

            // Crear usuario con AJAX
            $("#formCrearUsuario").submit(function (e) {
                e.preventDefault();
                var formData = $(this).serialize();
                $("#btnGuardar").prop('disabled', true).text('Guardando...');

                $.ajax({
                    type: 'POST',
                    url: '/Admin/Crear',
                    data: formData,
                    dataType: 'json',
                    success: function (response) {
                        Swal.fire({
                            icon: 'success',
                            title: '¡Éxito!',
                            text: response.mensaje,
                            showConfirmButton: false,
                            timer: 1500
                        }).then(() => {
                            $("#ModalUsuario").modal('hide');
                            $("#formCrearUsuario")[0].reset();
                            location.reload();
                        });
                    },
                    error: function (xhr) {
                        var error = xhr.responseJSON;
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: error?.mensaje || 'Error al crear usuario'
                        });
                    },
                    complete: function() {
                        $("#btnGuardar").prop('disabled', false).text('Crear Usuario');
                    }
                });
            });
        });

        // FUNCIÓN ELIMINAR CON SWEETALERT2
        function eliminarUsuario(idUsuario, nombreUsuario) {
            Swal.fire({
                title: '¿Está seguro?',
                text: `¿Desea eliminar al usuario "${nombreUsuario}"?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Mostrar loading
                    Swal.fire({
                        title: 'Eliminando...',
                        text: 'Por favor espere',
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    $.ajax({
                        type: 'POST',
                        url: '/Admin/Eliminar',
                        data: { id: idUsuario },
                        dataType: 'json',
                        success: function (response) {
                            Swal.fire({
                                icon: 'success',
                                title: '¡Eliminado!',
                                text: response.mensaje,
                                showConfirmButton: false,
                                timer: 1500
                            }).then(() => {
                                location.reload();
                            });
                        },
                        error: function (xhr) {
                            var error = xhr.responseJSON;
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: error?.mensaje || 'Error al eliminar usuario'
                            });
                        }
                    });
                }
            });
        }
    </script>
}