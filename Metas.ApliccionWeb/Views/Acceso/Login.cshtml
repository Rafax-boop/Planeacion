@{
    Layout = null;
    ViewData["Title"] = "Acceso";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Metas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<!-- Section: Design Block -->
<section class="text-center text-lg-start">
    <style>
        .cascading-right {
            margin-right: -50px;
        }
    </style>
    <!-- Jumbotron -->
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right bg-body-tertiary" style="
            backdrop-filter: blur(30px);
            ">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Iniciar Sesion</h2>
                        <!-- FORMULARIO CON EFECTO OUTLINE -->
                        <form>
                            <!-- Usuario input -->
                            <div class="form-floating mb-4">
                                <input type="email" class="form-control" id="floatingUsuario" placeholder=" " />
                                <label for="floatingUsuario">Usuario</label>
                            </div>

                            <!-- Contraseña input -->
                            <div class="form-floating mb-4">
                                <input type="password" class="form-control" id="floatingPassword" placeholder=" " />
                                <label for="floatingPassword">Contraseña</label>
                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="btn-Ingresar">
                                INGRESAR
                            </button>

                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg" class="w-100 rounded-4 shadow-4"
                     alt="" />
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->