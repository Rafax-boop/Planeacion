<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Metas</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Metas.ApliccionWeb.styles.css" asp-append-version="true" />
    <link href="~/css/Login.css" rel="stylesheet" />
    <link href="~/css/Navbar.css" rel="stylesheet" />
    <link href="~/css/Programacion.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/js/RegistrarProgramacion.js" rel="stylesheet" />
    <link href="~/css/Inicio.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light glass-effect" style="box-shadow: 0 8px 32px 0 rgb(33, 37, 41, .3);
    background: rgb(33, 37, 41, .1) !important; border: none !important;">
        <div class="container-fluid">
                <button class="navbar-toggler me-2" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarCentrado" aria-controls="navbarCentrado"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>            
            <div class="collapse navbar-collapse justify-content-center" id="navbarCentrado">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item li-nav mx-2">
                        <a class="nav-link active fw-semibold" aria-current="page"
                           asp-controller="Home" asp-action="Index">INICIO</a>
                    </li>
                    <div class="vr d-none d-lg-block"></div>
                    <li class="nav-item li-nav mx-1">
                        <a class="nav-link fw-semibold" asp-controller="Programacion" asp-action="Programacion">Ejercicio de Programacion</a>
                    </li>
                    <div class="vr d-none d-lg-block"></div>
                    <li class="nav-item li-nav mx-1">
                        <a class="nav-link fw-semibold" asp-controller="Monitoreo" asp-action="Monitoreo">Monitoreo y Seguimiento de Metas</a>
                    </li>
                    <div class="vr d-none d-lg-block"></div>
                    @if (User.IsInRole("Administrador")) {
                        <li class="nav-item li-nav mx-1">
                            <a class="nav-link fw-semibold" asp-controller="Admin" asp-action="Usuarios">Creacion de Usuarios</a>
                        </li>
                        <div class="vr d-none d-lg-block"></div>
                        <li class="nav-item li-nav mx-1">
                            <a class="nav-link fw-semibold" asp-controller="Admin" asp-action="FechaCaptura">Fecha de Captura</a>
                        </li>
                        <div class="vr d-none d-lg-block"></div>
                        <li class="nav-item li-nav mx-1">
                            <a class="nav-link fw-semibold" asp-controller="Admin" asp-action="FechaProgramacion">Fecha de Captura Programación</a>
                        </li>
                        <div class="vr d-none d-lg-block"></div>
                    }                    
                </ul>
            </div>
            <div class="d-none d-lg-flex order-lg-3">
                <li class="nav-item dropdown list-unstyled">
                    <a class="nav-link dropdown-toggle p-1" href="#" id="navbarDropdown"
                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="~/img/user-avatar.png" alt="Usuario"
                             style="height: 38px; width: 38px; object-fit: cover;">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end glass-effect" aria-labelledby="navbarDropdown">
                        <li class="dropdown-item-text px-3 py-2 text-center">
                            <small class="text-muted">Conectado como:</small>
                            <div class="fw-semibold text-dark">@User.Identity.Name</div>
                        </li>
                        <li>
                            <a class="dropdown-item py-2 fw-semibold titulo btn-cerrar" href="@Url.Action("CerrarSesion", "Acceso")">
                                <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                            </a>
                        </li>
                    </ul>
                </li>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            <div class="d-flex justify-content-center align-items-center gap-4 mb-2">
                <img style="height: 40px; width: auto;" src="~/img/familias-dif.png" alt="Logo 1" />
                <img style="height: 40px; width: auto;" src="~/img/pensargrande.png" alt="Logo 3" />
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
