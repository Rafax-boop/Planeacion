<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Metas</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Metas.ApliccionWeb.styles.css" asp-append-version="true" />
    <link href="~/css/Login.css" rel="stylesheet" />
    <link href="~/css/Navbar.css" rel="stylesheet" />
    <link href="~/css/Programacion.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/Inicio.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light glass-effect" style="box-shadow: 0 8px 32px 0 rgb(33, 37, 41, .3);
    background: rgb(33, 37, 41, .1) !important; border: none !important;">
        <div class="container-fluid">       
            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse justify-content-center" id="navbarCentrado">                
                <!-- Navigation links -->
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item li-nav mx-2">
                        <a class="nav-link active fw-semibold" aria-current="page" href=" /Home/Index">INICIO</a>
                    </li>
                    <div class="vr"></div>
                    <li class="nav-item li-nav mx-1">
                        <a class="nav-link fw-semibold" href=" /Programacion/Programacion">Ejercicio de Programacion</a>
                    </li>
                    <div class="vr"></div>
                    <li class="nav-item li-nav mx-1">
                        <a class="nav-link fw-semibold" href=" /Monitoreo/Monitoreo">Monitoreo y Seguimiento de Metas</a>
                    </li>
                    <div class="vr"></div>
                    @if (User.IsInRole("Administrador")) {
                        <li class="nav-item li-nav mx-1">
                            <a class="nav-link fw-semibold" href="#">Creacion de Usuarios</a>
                        </li>
                        <div class="vr"></div>
                        <li class="nav-item li-nav mx-1">
                            <a class="nav-link fw-semibold" href="#">Fecha de Captura</a>
                        </li>
                        <div class="vr"></div>
                        <li class="nav-item li-nav mx-1">
                            <a class="nav-link fw-semibold" href="#">Fecha de Captura Programación</a>
                        </li>
                        <div class="vr"></div>
                    }                    
                </ul>
            </div>
            <!-- Navbar dropdown -->
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle p-1" href="#" id="navbarDropdown"
                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="~/img/user-avatar.png" alt="Usuario"
                         style="height: 38px; width: 38px; object-fit: cover;">
                </a>
                <ul class="dropdown-menu dropdown-menu-end glass-effect" aria-labelledby="navbarDropdown">
                    <li class="dropdown-item-text px-3 py-2 text-center">
                        <small class="text-muted">Conectado como:</small>
                        <div class="fw-semibold text-dark">@User.Identity.Name</div>
                    </li>
                    <li>
                        <a class="dropdown-item py-2 fw-semibold titulo btn-cerrar" href="@Url.Action("CerrarSesion", "Acceso")">
                            <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                        </a>
                    </li>
                </ul>
            </li>            
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            <div class="d-flex justify-content-center align-items-center gap-4 mb-2">
                <img style="height: 40px; width: auto;" src="~/img/familias-dif.png" alt="Logo 1" />
                <img style="height: 40px; width: auto;" src="~/img/pensargrande.png" alt="Logo 3" />
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
