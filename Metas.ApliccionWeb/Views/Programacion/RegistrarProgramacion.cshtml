            <div class="col-md-2">
                <input type="number" class="form-control form-control-sm input-arena text-center" value="0" min="0">
            </div>
        </div>

        @* Fila para PERSONAS *@
        <div class="row align-items-center">
            <div class="col-md-3 text-center">
                <label class="fw-light">PERSONAS</label>
            </div>
            <div class="col-md-2">
                <input type="number" class="form-control form-control-sm input-arena text-center" value="0" min="0">
            </div>
            <div class="col-md-2">
                <input type="number" class="form-control form-control-sm input-arena text-center" value="0" min="0">
            </div>
            <div class="col-md-2">
                <input type="number" class="form-control form-control-sm input-arena text-center" value="0" min="0">
            </div>
            <div class="col-md-2">
                <input type="number" class="form-control form-control-sm input-arena text-center" value="0" min="0">
            </div>
        </div>
    </div>

    <div class="row border-bottom border-top">
        <label class="col-md-4 align-content-center">17. UNIDAD DE MEDIDA</label>
        <div class="col-md-8 my-3">
            <textarea class="input-arena form-control" rows="2" placeholder=""></textarea>
        </div>
    </div>
    <div class="row border-bottom">
        <label class="col-md-4 align-content-center">18. MEDIOS DE VERIFICACIÓN</label>
        <div class="col-md-8 my-3">
            <textarea class="input-arena form-control" rows="2" placeholder=""></textarea>
        </div>
    </div>
    <div class="row border-bottom">
        <label class="col-md-4 align-content-center">19. SERIE DE INFORMACIÓN DISPONIBLE</label>
        <div class="col-md-4 my-3">
            <textarea class="input-arena form-control" rows="2" placeholder=""></textarea>
        </div>
        <div class="col-md-4 my-3">
            <textarea class="input-arena form-control" rows="2" placeholder=""></textarea>
        </div>
    </div>
